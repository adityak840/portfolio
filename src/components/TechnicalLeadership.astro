---
import Section from "./Section.astro";
import type { ExperienceProps } from "@types";

interface Props {
  technical: ExperienceProps[];
}

const { technical } = Astro.props;
---

<Section text="Technical Leadership & Mentorship" href="technical">
  {
    technical.map(({ company, position, startDate, endDate, summary }) => (
      <div class="mb-10">
        <h3 class="mb-1.5 font-serif text-2xl font-semibold text-white">
          {company}
        </h3>
        <div class="flex flex-col items-start pb-5">
          <h4 class="mb-0.5 font-serif text-2xl font-medium text-primary">
            {position}
          </h4>
          <span class="pb-[2px] text-sm text-white/70">
            {startDate} â€” {endDate}
          </span>
        </div>
        {Array.isArray(summary) ? (
          <ul class="list-disc space-y-4 pl-6">
            {summary.map((log) => (
              <li class="relative mb-3 text-base text-neutral">{log}</li>
            ))}
          </ul>
        ) : (
          <p class="text-base text-neutral">{summary}</p>
        )}
      </div>
    ))
  }
</Section>
