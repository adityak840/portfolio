---
import type { HeroProps } from "@types";
import { Icon } from "astro-icon/components";
type Props = HeroProps;

const { name, specialty, summary, email, location, linkedin, github } =
  Astro.props;
---

<section class="py-24" id="hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mb-2 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>

  {
    location && (
      <p class="mb-6 text-sm font-semibold text-gray-400 uppercase">
        {location}
      </p>
    )
  }

  <p class="mb-16 max-w-3xl text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="mb-12 flex items-center gap-6">
    <a
      class="hover:bg-primary-dark inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-white transition-colors"
      href={`mailto:${email}`}
      aria-label="Send Email"
    >
      Get in Touch
    </a>

    {/* Optional social links - display only if provided */}
    {
      linkedin && (
        <a
          class="text-neutral transition-colors hover:text-primary"
          href={linkedin}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn Profile"
        >
          <Icon name="mdi:linkedin" class="h-6 w-6" />
        </a>
      )
    }

    {
      github && (
        <a
          class="text-neutral transition-colors hover:text-primary"
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub Profile"
        >
          <Icon name="mdi:github" class="h-6 w-6" />
        </a>
      )
    }
  </div>
</section>
