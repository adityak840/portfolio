---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { 
  name, 
  specialty, 
  summary, 
  email, 
  location, 
  linkedin, 
  github 
} = Astro.props;
---

<section class="py-24" id="hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mb-2 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>

  {location && (
    <p class="mb-6 text-sm font-semibold uppercase text-gray-400">{location}</p>
  )}

  <p class="mb-16 max-w-3xl text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="flex items-center gap-6 mb-12">
    <a
      class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-white hover:bg-primary-dark transition-colors"
      href={`mailto:${email}`}
      aria-label="Send Email"
    >
      Get in Touch
    </a>

    {/* Optional social links - display only if provided */}
    {linkedin && (
      <a
        class="text-neutral hover:text-primary transition-colors"
        href={linkedin}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn Profile"
      >
        {/* <Linkedin /> */}
      </a>
    )}

    {github && (
      <a
        class="text-neutral hover:text-primary transition-colors"
        href={github}
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub Profile"
      >
        {/* <Github /> */}
      </a>
    )}
  </div>
</section>
