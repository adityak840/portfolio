---
import type { SkillProps } from "@types";
import Section from "./Section.astro";
import { Icon } from "astro-icon/components";

interface Props {
  skills: SkillProps[];
}

const { skills } = Astro.props;
---

<Section text="Technical Skills" href="skills">
  <div class="space-y-12">
    {
      skills.map((group) => (
        <div>
          <h4 class="text-primary-700 mb-6 text-lg font-semibold tracking-wide uppercase dark:text-cyan-300">
            {group.category}
          </h4>
          <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
            {group.items.map((skill) => (
              <li class="flex items-center gap-3 rounded-lg border border-neutral-200 bg-white p-3 shadow-sm transition hover:shadow-md dark:border-neutral-800 dark:bg-neutral-900">
                {skill.icon ? (
                  <Icon
                    name={skill.icon}
                    size="1.75em"
                    class="text-blue-500 dark:text-cyan-400"
                    aria-label={skill.name}
                  />
                ) : (
                  <div class="h-[1.75em] w-[1.75em] rounded bg-neutral-300 dark:bg-neutral-700" />
                )}
                <span class="text-base font-medium text-neutral-800 dark:text-neutral-100">
                  {skill.name}
                </span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</Section>
